<FileScreen>
    BoxLayout:
        orientation: 'horizontal'
        padding: 20, 250
        spacing: 20
        TextInput:
            hint_text:"Add new file"
            id: name
        TextInput:
            hint_text:"Choose the file"
            id: file
    MDFloatLayout:
        Button:
            text:"home"
            pos_hint:{'left_x':0}
            font_size:10
            size_hint:0.08,0.08
            on_press: root.manager.current = 'menu'
    MDFloatLayout:
        Button:
            text:"add"
            pos_hint:{'center_x':0.2,'y':0.3}
            font_size:10
            size_hint:0.08,0.08
            on_press: root.first_button()
    MDFloatLayout:
        Button:
            text:"add"
            pos_hint:{'center_x':0.7,'y':0.3}
            font_size:10
            size_hint:0.08,0.08
            on_press: root.second_button()


<GeneralScreen>
